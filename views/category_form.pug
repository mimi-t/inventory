extends layout
block content

  h1= title

  form(method='POST' action='')
    .form-group
      label(for='category_name') Name
      input#category_name.form-control(type='text' name='category_name' required='true' value=(category==undefined ? '' : category.name))
    .form-group
      label(for='category_desc') Description
      textarea#category_desc.form-control(name='category_desc' rows='3' required='true') #{category==undefined ? '' : category.description}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg